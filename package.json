{
	"name": "Git Patch Viewer",
	"description": "Git Viewer and Tools",
	"version": "0.0.1",
	"publisher": "Zim",
	"private": true,
	"license": "MIT",
	"icon": "media/patch.webp",
	"repository": {
		"type": "git",
		"url": "https://github.com/zikalino/git-patch-tools"
	},
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onWebviewPanel:gitPatchTools"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "package-explorer",
					"title": "Package Explorer",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"package-explorer": [
				{
					"id": "nodeDependencies",
					"name": "Node Dependencies",
					"icon": "media/dep.svg",
					"contextualTitle": "Package Explorer"
				}
			],
			"explorer": [
				{
					"id": "patchEplorer",
					"name": "Patch Explorer"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "gitPatchTools.patchExtract",
					"when": "patchPanelActive"
				},
				{
					"command": "gitPatchTools.patchSplit",
					"when": "patchPanelActive"
				}
			],
			"explorer/context": [
				{
					"command": "gitPatchTools.patchesMerge",
					"when": "listMultiSelection"
				},
				{
					"command": "gitPatchTools.patchSplitByFiles",
					"when": "!listMultiSelection"
				},
				{
					"command": "gitPatchTools.patchSplitByFolders",
					"when": "!listMultiSelection"
				}
			]
		},
		"commands": [
			{
				"command": "gitPatchTools.start",
				"title": "Start Git Patch Tools session",
				"category": "Patch"
			},
			{
				"command": "gitPatchTools.patchExtract",
				"title": "Extract",
				"category": "Patch"
			},
			{
				"command": "gitPatchTools.patchSplit",
				"title": "Split",
				"category": "Patch"
			},
			{
				"command": "gitPatchTools.patchesMerge",
				"title": "Merge Patches",
				"category": "Patch"
			},
			{
				"command": "gitPatchTools.patchSplitByFiles",
				"title": "Split Patch by Files",
				"category": "Patch"
			},
			{
				"command": "gitPatchTools.patchSplitByFolders",
				"title": "Split Patch by Folders",
				"category": "Patch"
			}
		],
		"customEditors": [
        	{
            	"viewType": "gitPatchTools.patchEditor",
            	"displayName": "Git Patch Editor",
            	"selector": [
                	{
                    	"filenamePattern": "*.patch"
                	}
            	]
        	}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22",
		"@types/vscode": "^1.100.0",
		"@types/vscode-webview": "^1.57.0",
		"eslint": "^9.13.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	}
}